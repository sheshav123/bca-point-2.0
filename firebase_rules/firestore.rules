rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can read/write their own data, admin tools can read all
    match /users/{userId} {
      allow read: if request.auth != null; // Allow reading any user (for admin tools)
      allow write: if request.auth != null && request.auth.uid == userId; // Only write own data
    }
    
    // Categories - anyone can read and write (for admin panel with password auth)
    match /categories/{categoryId} {
      allow read, write: if true;
    }
    
    // Subcategories - anyone can read and write (for admin panel with password auth)
    match /subcategories/{subcategoryId} {
      allow read, write: if true;
    }
    
    // Study Materials - anyone can read and write (for admin panel with password auth)
    match /studyMaterials/{materialId} {
      allow read, write: if true;
    }
    
    // Annotations - users can read/write/delete their own annotations
    match /annotations/{annotationId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && 
                               request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Notifications - anyone can read and write (admin panel creates, users read)
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if true; // Admin panel can create, users can update read status
    }
  }
}
